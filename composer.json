{
    "name": "persist/tests",
    "description": "Functional tests for all Persist libraries",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "persist/core": "dev-master as 1.0.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.5",
